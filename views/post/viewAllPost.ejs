<ul>
    <% posts.forEach(post => { %>
        <li>
            <a href="/"></a>
                <h2><%= post.title %></h2>
                <img src="<%= post.image %>" alt="Image">
                <p><%= post.description %></p>
                <p><%= post.city %>, <%= post.country %></p>
                <% if (post.latitude && post.longitude) { %>
                    <p><%= post.latitude %></p>
                    <p><%= post.longitude %></p>
                <% } %>
            </a>
            <a href="/posts/upvote/<%= post.id %> "><i class="fa fa-thumbs-up" aria-hidden="true" ></i></a>
           
            <a href="/posts/downvote/<%= post.id %> "><i class="fa fa-thumbs-down" aria-hidden="true" ></i></a>
            <span><%= post.upVote.length - post.downVote.length  %></span>
            <br>
            <% if (currentUser) { %>
            <% if (post.user.toString() === currentUser._id) { %>
                <a href="/posts/edit/<%= post.id %>">Edit post</a>
                <form action="/posts/<%= post.id %>?_method=DELETE" method="post">
                    <button type="submit">Delete post</button>
                </form>
            <% } %>
            <% } %>
        </li>   
    <% }) %>
    <% if (currentUser) { %>
        <a href="/posts/create">Create post</a>
    <% } %>
    <a href="/">Back home</a>
</ul>