<link rel="stylesheet" href="../css/viewAll.css">
<div class="container">
  <ul>
    <% posts.forEach(post => { %>
    <li>
      <a class="info" href="/posts/postDetail/<%= post.id %> ">
        <div class="title">
          <h2><%= post.title %></h2>
          <img class="images" src="<%= post.image[0] %>" alt="Image" />
        </div>
        <div class="description">
          <p>Description:</p>
          <p class="descriptionBox"><%= post.description %></p>
        </div>
        <div class="loclev">
          <p>Location: <%= post.city %>, <%= post.country %></p>
          <p>Level: <%= post.level%></p>
        </div> 
      </a>
      <div class="editing">
        <div class="editDelBtns">
          <% if (currentUser) { %> 
            <% if (post.user.toString() === currentUser._id) { %>
            <a id="edit" href="/posts/edit/<%= post.id %>">Edit post</a>
            <form action="/posts/<%= post.id %>?_method=DELETE" method="post">
              <button id="deletePost" type="submit">Delete post</button>
            </form>
            <% } %> 
          <% } %>
        </div>
        <div class="votes">
          <a href="/posts/upvote/<%= post.id %> "
            ><i class="fa fa-thumbs-up" aria-hidden="true"></i
          ></a>
          <span><%= post.upVote.length %></span>
          <a href="/posts/downvote/<%= post.id %> "
            ><i class="fa fa-thumbs-down" aria-hidden="true"></i
          ></a>
          <span><%= post.downVote.length %></span>
        </div>
      </div>
      <br />
    </li>
    <% }) %> 
  </ul>
  <div class="btns">
    <% if (currentUser) { %>
      <a class="creatBackBtns" href="/posts/create">Create post</a>
      <% } %>
    <br>
      <a class="creatBackBtns" href="/">Back home</a>
  </div>
</div>

