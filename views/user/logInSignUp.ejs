<link rel="stylesheet" href="/css/logSign.css">
<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <h6 class="mb-0 pb-3"><span>Log In </span><span>Sign Up</span></h6>
                      <input class="checkbox" type="checkbox" id="reg-log" name="reg-log"/>
                      <label for="reg-log"></label>
                    <div class="card-3d-wrap mx-auto">
                        <div class="card-3d-wrapper">
                            <div class="card-front">
                                <form action="/login" method="post">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3">Log In</h4>
                                        <div class="form-group">
                                            <input type="email" name="email" class="form-style" placeholder="Your Email" id="logemail" autocomplete="off">
                                            <i class=" input-icon fa-solid fa-envelope"></i>
                                        </div>	
                                        <div class="form-group mt-2">
                                            <input type="password" name="password" class="form-style" placeholder="Your Password" id="logepass" autocomplete="off">
                                            <i class="input-icon fa-solid fa-lock"></i>
                                            <i
                                                class="input-icon far fa-eye"
                                                id="togglePassword"
                                                style="margin-left: 76%; cursor: pointer;"
                                            ></i>
                                        </div>
                                        <button type="submit" class="btn mt-4">submit</button>
                                        <p class="mb-0 mt-4 text-center"><a href="/password-reset" class="link">Forgot your password?</a></p>
                                    </div>
                                </div>
                                </form>
                            </div>
                            <div class="card-back">
                                <form action="/signup" method="post">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <h4 class="mb-4 pb-3">Sign Up</h4>
                                            <div class="form-group">
                                                <input type="text" name="username" class="form-style" placeholder="Your Full Name" id="signame" autocomplete="off">
                                                <i class="input-icon fa-solid fa-user"></i>
                                            </div>	
                                            <div class="form-group mt-2">
                                                <input type="email" name="email" class="form-style" placeholder="Your Email" id="sigemail" autocomplete="off">
                                                <i class="input-icon fa-solid fa-at"></i>
                                            </div>	
                                            <div class="form-group mt-2">
                                                <input minlength="6" type="password" name="password" class="form-style" placeholder="Your Password" id="sigpass" autocomplete="off" onkeyup='check();'>
                                                <i class="input-icon fa-solid fa-lock"></i>
                                                <i
                                                    class="input-icon far fa-eye"
                                                    id="togglePassword2"
                                                    style="margin-left: 76%; cursor: pointer;"
                                                ></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input minlength="6" type="password" name="repeatPassword" class="form-style" placeholder="Repeat Your Password" id="repeatpass" autocomplete="off"
                                                onkeyup='check();'>
                                                <i class="input-icon fa-solid fa-lock"></i>
                                                <i
                                                    class="input-icon far fa-eye"
                                                    id="togglePassword3"
                                                    style="margin-left: 76%; cursor: pointer;"
                                                ></i>
                                            </div>
                                            <div id="message"></div>
                                            <button type="submit" class="btn mt-4">Create account</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                      </div>
                  </div>
              </div>
          </div>
    </div>
</div>
<script src="../../js/index.js"></script>